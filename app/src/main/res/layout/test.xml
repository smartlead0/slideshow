<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_onboard">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_bg_onboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="10:11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gradient_onboard" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgStory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.8"
        app:srcCompat="@drawable/img_story_onboard_22" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgStoryFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_frame_story"
        app:layout_constraintBottom_toBottomOf="@+id/imgStory"
        app:layout_constraintEnd_toEndOf="@+id/imgStory"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="@+id/imgStory"
        app:layout_constraintTop_toTopOf="@+id/imgStory"
        app:layout_constraintWidth_percent="0.8" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgWhite"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/shape_bottom_story"
        app:layout_constraintEnd_toEndOf="@+id/imgStory"
        app:layout_constraintStart_toStartOf="@+id/imgStory"
        app:layout_constraintTop_toBottomOf="@+id/imgStory" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgAvatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgWhite"
        app:layout_constraintStart_toStartOf="@+id/imgWhite"
        app:layout_constraintTop_toTopOf="@+id/imgWhite"
        app:srcCompat="@drawable/img_avatar_onboard" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="Devgurus"
        android:textColor="#60000000"
        android:textSize="12sp"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="8.1K"
        android:textColor="#60000000"
        android:textSize="12sp"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        app:layout_constraintEnd_toStartOf="@+id/imgHeart"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgHeart"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/imgHeart"
        app:layout_constraintStart_toStartOf="@+id/imgHeart"
        app:layout_constraintWidth_percent="0.3"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anim_heart_onboard" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgHeart"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        app:layout_constraintEnd_toEndOf="@+id/imgWhite"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar"
        app:srcCompat="@drawable/img_heart_onboard" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/layout_txt"
        app:layout_constraintDimensionRatio="586:94"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgWhite"
        app:layout_constraintWidth_percent="0.8"
        app:srcCompat="@drawable/img_social_onboarding" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share To The World"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Let Your Memories Inspire Others."
            android:textColor="@color/white"
            android:textSize="13dp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_welcome" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
