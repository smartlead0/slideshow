<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/duration_each_photo"
        android:textColor="@color/text_headline_color"
        android:textSize="18sp" />

    <com.tech.slideshow.customviews.indicatorseekbar.IndicatorSeekBar
        android:id="@+id/seekBarDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:isb_progress="20"
        app:isb_seek_smoothly="false"
        app:isb_show_indicator="none"
        app:isb_show_tick_marks_type="divider"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/colorAccent"
        app:isb_tick_marks_color="@color/white"
        app:isb_tick_texts_array="@array/time_duration"
        app:isb_tick_texts_color="@color/text_headline_color"
        app:isb_ticks_count="6"
        app:isb_track_progress_color="@color/colorAccent" />
</LinearLayout>