<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <RelativeLayout
        android:id="@+id/pdf_item_dir_select"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/pdf_item_folder_left"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/album_cover"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/pdf_item_dir_select"
        android:gravity="start">

        <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="ssss"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/album_media_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_name"
            android:layout_alignStart="@+id/album_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_medium"
            android:text="1111"
            android:textColor="#ff93959e"
            android:textSize="14sp" />
    </RelativeLayout>

    <!--    <View-->
    <!--        android:id="@+id/pdf_item_folder_select_line"-->
